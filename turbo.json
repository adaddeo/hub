{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["build/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "inputs": ["src/**/*.ts"],
      "outputs": []
    },
    "test:ci": {
      "dependsOn": ["lint", "build"],
      "outputs": ["coverage/**"]
    },
    "typecheck": {}
  },
  "globalDependencies": ["tsconfig.json", ".eslintrc.cjs"]
}
